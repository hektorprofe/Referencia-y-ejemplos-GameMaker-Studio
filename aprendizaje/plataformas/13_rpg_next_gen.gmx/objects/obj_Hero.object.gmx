    sprite_index = spr_Hero_Up;
    phy_position_y -= new_mov_speed;
    moving = true;
}

if (keyboard_check(vk_down) || keyboard_check(ord('S'))){
    sprite_index = spr_Hero_Down;
    phy_position_y += new_mov_speed;
    moving = true;
}

if (!moving) {
    image_speed = 0;
    image_index = 1;
}
else image_speed = 0.2;


if (keyboard_check_pressed(ord('Z'))  || keyboard_check(ord('E'))){
    // Interact
